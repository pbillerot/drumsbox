<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.pbillerot.drumsbox">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/drums"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="fr.pbillerot.drumsbox.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="fr.pbillerot.drumsbox.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.pbillerot.drumsbox.MainActivity"/>
        </activity>
        <activity
            android:name="fr.pbillerot.drumsbox.MainActivity"
            android:label="@string/app_title"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>